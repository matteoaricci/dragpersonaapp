<body class="login_body">

<br>

<h4 class="pink_text center black_background"><%= flash[:login_warning] %></h4>
<div class="login_form grey_background">

    <%= form_tag '/' do %>
        <h4 style="color: pink;"> <%= label_tag :username %>
            <%= text_field_tag :username %></h4>
        <h4 style="color: pink;"><%= label_tag :password %>
            <%= password_field_tag :password %></h4>
        
        <%= submit_tag "Login", class:"btn btn-lg button_pink" %>

    <% end %>

    <br>
    <button class="rounded_button rounded center" ><%= link_to "Make a New Queen", new_user_path %></button>
</div>
</body>
