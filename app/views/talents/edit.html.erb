<h1>Edit Talent</h1>

<%= form_for @talent do |f| %>
    <%= f.label :name, "Full Name: " %><br>
    <%= f.text_field :name %><br>
    <%= f.label :description, "Description: " %><br>
    <%= f.text_area :description %><br>
    <%= f.label :user_ids, "User: " %><br>
    <%= f.collection_check_boxes :user_ids, User.all, :id, :drag_name %><br><br>
    <%= f.submit %>
<% end %>
<br>
<div>
    <%= link_to "Back to #{@talent.name}'s Page", talent_path(@talent) %>
</div>