<br>
<div style="background-color: rgba(236, 158, 158, 0.788); text-align: center; margin-right: 50%; color: white;">
    <br>
    <h1><%= @user.drag_name %></h1>
    <br>
</div>
<%= flash.notice %>
<div>
    <p>Real Name: <%= @user.name %></p>
</div>
<div>
    <p>Lives in: <%= link_to @user.city.name, city_path(@user.city) %></p>
</div>
<div>
    <h3><%= @user.drag_name %>'s Talents: </h3>
    <% if @user.talents.any? %>
        <ul>
            <% @user.talents.each do |talent| %>
                <li><%= link_to talent.name, talent_path(talent) %></li>
            <% end %>
        </ul>
    <% else %>
        <% if current_user != @user %>
            <p>She doesn't have any.</p>
        <% else %>
            <p><%= link_to "Create", new_talent_path %> or <%= link_to "choose", edit_user_path %> some talents</p>
        <% end %>
    <% end %>
</div>

<nav class="navbar fixed-bottom navbar-light bg-light margins center">
    <% if @user == current_user %>
        <a class="nav-link" href="/logout">Logout</a>
        <a class="nav-link" href="/users/<%= @user.id %>/edit">Edit</a>
        <%= form_tag(user_path(@user), method: :delete) do %>
            <%= submit_tag "Delete Account", class:"pink_text_button bg-light" %>
        <% end %>
    <% end %>
</nav>