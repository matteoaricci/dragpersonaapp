<h1>New House</h1>
<hr>
<br>
<%= form_for @house do |f| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :name %>
        <%= f.text_field :name, class:"form-control", placeholder:"Name" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :description %>
        <%= f.text_area :description, class:"form-control", placeholder:"Description" %>
      </div>
    </div>
    <br>
    <button type="submit" class="btn rounded_button">Submit</button>
<% end %>